@model Capstone.Web.Models.AdminNewHotspotModel
@{
    ViewBag.Title = "Add Hotspot";
}

<h2 id="add-hotspot-title" class="col-lg-offset-5">Add Hotspot</h2>

<div class="container" id="hotspot-example-img">
<form action="@Url.Action("AddHotspot", "Admin")" method="post">
    <img src="~/Content/images/hotspotStilllExampleWithCursor.png" alt="(This is just a still of an example)" />
</form>
</div>
    <div class="container" id="add-hotspot">
        <div class="form-group">
            <label for="example-text-input" class="col-lg-4 col-form-label">Title<span style="color: red; font-size: 1.3em;">*</span></label>
            <div>
                <input class="form-control" type="text" value="Title of hotspot" id="example-text-input">
            </div>
        </div>

        <div class="form-group">
            <label for="exampleTextarea" class="col-lg-4">Description</label>
            <textarea class="form-control" id="exampleTextarea" rows="3"></textarea>
        </div>
        <div class="form-group">
            <label for="mediaType" class="col-lg-4">Media Type</label>
            <select class="form-control" id="mediaType">
                <option value="img">Image</option>
                <option value="video">Video</option>
                <option value="text">Text</option>
            </select>
        </div>
        <div class="form-group">
            <label for="exampleInputFile" class="col-lg-4">File input</label>
            <input type="file" class="form-control-file" id="exampleInputFile" aria-describedby="fileHelp">
            <small id="fileHelp" class="form-text text-muted">Find any images or videos you'd like to link to if on your computer.</small>
        </div>
        <button type="submit" class="btn btn-primary col-lg-offset-5">Submit</button>
</form>

    </div>

