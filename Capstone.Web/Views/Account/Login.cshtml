@using Capstone.Web.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<h2>Please log in to the Virtual Metroparks system.</h2>
<section id="loginForm">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group row">
            @Html.TextBoxFor(m => m.Email, new { placeholder = "email", @class = "form-control" })
            @Html.ValidationMessage("Email", new { @class = "invalid-field" })
        </div>
        <div class="form-group row">
            @Html.PasswordFor(m => m.Password, new { placeholder = "password", @class = "form-control" })
            @Html.ValidationMessage("Password", new { @class = "invalid-field" })
        </div>
        <div class="form-group row">
            @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check" })
            @Html.LabelFor(m => m.RememberMe, new { @class = "form-check-label" })
        </div>
        <div class="form-group row">
            @Html.ValidationMessage("", new { @class = "invalid-field" })
        </div>
        <div class="form-group row">
            <input type="submit" value="Log in" class="btn btn-primary" />
        </div>

        <div class="form-group row">
            @Html.ActionLink("First time? Click here to sign up!", "Register")
        </div>
    }
</section>